@model ConsommiTounsi.Models.Evenement.Evenement

@{
    ViewBag.Title = "EvenementById";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}




           



<div class="row sh_page">
    <div class="col-xl-5 col-md-6 col-12">
        <div id="content" class="page-content">
            <div id="photo-view-container">
                <div id="photo-display" class="gallery"><a href="https://dostguru.com/HTML/hitech/assets/img/product/product_13.jpg" id="selected-photo"><img src="@Html.DisplayFor(model => model.picture)" id="selected-photo" alt=""></a></div>
                <div id="left" onclick="leftRight(this)"></div>
                <div id="photo-container-holder">
                    <div id="photo-container" style="margin-left: 0px; width: 1265px;">

                    </div>
                </div>
                <div id="right" onclick="leftRight(this)"></div>
            </div>
        </div>
    </div>
    <div class="col-xl-7 col-md-6 col-12">

        <div class="sp_product_detail">

            <h1 class="font-weight-bold text-uppercase"><a href="#"> @Html.DisplayFor(model => model.name)</a></h1>

            <span class="sp_price font-weight-bold"> دينار @Html.DisplayFor(model => model.maxCollect)/@Html.DisplayFor(model => model.sumCollect) </span>



            <div class="sp_add_info my-3">
                <ul>
                    <li class="sku my-2">
                        <span class="text-uppercase font-weight-bolder">participation :</span>
                        <span> @Html.DisplayFor(model => model.number) /  @Html.DisplayFor(model => model.maxnumber)</span>
                    </li>
                    <li class="availability my-2">
                        <span class="font-weight-bolder">location :</span>
                        <span> @Html.DisplayFor(model => model.location)</span>
                    </li>
                </ul>
            </div>
            <div class="sp_text">
                <ul>
                    <li class="my-2"> type : @Html.DisplayFor(model => model.eventType)</li>
                </ul>
            </div>

            <div class="sp_ad_info">
                <ul>
                    <li class="my-2">
                        <span>vendor:</span><span><a href="#" class="text-muted pl-2">@Html.DisplayFor(model => model.description)</a></span>
                    </li>
                    <li class="my-2">
                        <span>                                                                                                                 bbb                                                   </span><span class="text-muted pl-2">shirt</span>
                    </li>
                    <li class="my-2">
                        <span>barcode:</span><span class="text-muted pl-2">1234321</span>
                    </li>
                    <li class="my-2">
                        <span>tags:</span><span><a href="#" class="text-muted px-2">summer ,</a></span><span><a href="#" class="text-muted ">winter</a></span>
                    </li>
                </ul>
            </div>

            @Html.ActionLink("Donate", "Donate", "Evenement", new { EvId = Model.id }, new { @class = "btn btn-primary rese float-left mt-3" })



        </div>
       
    </div>
</div>