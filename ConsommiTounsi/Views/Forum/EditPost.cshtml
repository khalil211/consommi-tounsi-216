@model ConsommiTounsi.Models.Forum.Post
@{
    ViewBag.Title = "Edit post";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div id="right_blog_sidebar_page" class="right-blog-page blog-page animate__animated animate__fadeInUp">

    <div class="sp_header bg-white p-3   animate__animated animate__fadeInUp">
        <div class="container custom_container ">
            <div class="row ">
                <div class="col-12 ">
                    <ul>
                        <li class="d-inline-block font-weight-bolder"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="d-inline-block hr_ font-weight-bolder"><a href="@Url.Action("Index", "Forum")">Forum</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container custom_container">

        <div class="row">
            <div class="col-md-8 col-lg-8 col-xl-9 col-sm-12 b_left_blog mb-3 mb-md-0">
                <div class="row sh_page rounded">
                    <div class="row page-content card card-block p-3 p-sm-4 col-md-12">
                        <div class="page-content card card-block p-3 p-sm-4 col-md-12">
                            <div class="col-md-12">
                                <h5 style="text-transform:none" class="font-weight-bold text-danger">Edit post @Model.id</h5>
                                @using (Html.BeginForm("EditPost", "Forum", new { topicId = ViewBag.topicId, page = ViewBag.page, sort = ViewBag.sort }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.content, new { htmlAttributes = new { @class = "form-control form-control-full", @style = "border: gray solid 1px;" } })
                                                @Html.ValidationMessageFor(model => model.content, "", new { @class = "text-danger" })
                                                @Html.HiddenFor(model => model.medias)
                                            </div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(Model.medias))
                                        {
                                            <div class="form-group">
                                                <img src="@Url.Content("~/Content/Forum/" + Model.medias)" class="fst-image mx-auto d-block img-fluid rounded" alt="image" , style="margin-bottom: 21px;">
                                            </div>
                                            <div class="form-group form-check">
                                                @Html.CheckBox("removeImage", false, new { @class = "form-check-input", id="image_check" })
					                            <label class="form-check-label" for="image_check">Remove image</label>
					                        </div>
                                        }
                                        <div class="form-group">
                                            <label class="font-weight-bolder" style="text-transform:none">Upload an image if you want to change or add it</label>
                                            <div class="col-md-8">
                                                @Html.TextBox("file", "", new { type = "file" })
                                                @Html.ValidationMessageFor(model => model.medias, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-12">
                                                <div><input type="submit" name="submit" class="btn btn-primary mt-3 float-right" value="Edit"></div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}