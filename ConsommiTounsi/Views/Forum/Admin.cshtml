@model IEnumerable<ConsommiTounsi.Models.Forum.Topic>
@{
    ViewBag.Title = "Manage topics";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="~/Content/Admin/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/Content/Admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Content/Admin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Content/Admin/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Content/Admin/plugins/toastr/toastr.min.css">
    <link rel="stylesheet" href="~/Content/Admin/dist/css/adminlte.min.css">
    <style>
        html {
            scroll-behavior: smooth;
        }
    </style>
}

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Topics</h3>
        </div>
        <div class="card-body">
            <table id="topic_table" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>User</th>
                        <th>Posts</th>
                        <th>Rating</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ConsommiTounsi.Models.Forum.Topic topic in Model)
                    {
                        <tr id="topic-tr-@topic.id">
                            <td>@topic.title</td>
                            <td>@topic.description</td>
                            <td>@topic.date.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            <td>@topic.user.username</td>
                            <td>@topic.posts.Count</td>
                            @{ double starAvg = 0;
                                if (topic.stars.Count != 0)
                                {
                                    starAvg = (int)(topic.stars.Select(s => s.value).Average() * 100);
                                    starAvg = starAvg / 100;
                                }
                            }
                            <td>@starAvg (@topic.stars.Count)</td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="#" onclick="getTopic(@topic.id)">
                                    <i class="fas fa-folder">
                                    </i>
                                    View
                                </a>
                                <a class="btn btn-danger btn-sm" href="#" onclick="deleteTopic(@topic.id)">
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>User</th>
                        <th>Posts</th>
                        <th>Rating</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <div id="posts">
    </div>
</section>

@section scripts {
    <script src="~/Content/Admin/plugins/jquery/jquery.min.js"></script>
    <script src="~/Content/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/Admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/Admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/Admin/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Content/Admin/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Content/Admin/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Content/Admin/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/Content/Admin/plugins/jszip/jszip.min.js"></script>
    <script src="~/Content/Admin/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/Content/Admin/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/Content/Admin/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/Content/Admin/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/Content/Admin/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script src="~/Content/Admin/plugins/toastr/toastr.min.js"></script>
    <script src="~/Content/Admin/dist/js/adminlte.min.js"></script>
    <script src="~/Content/Admin/dist/js/demo.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#topic_table").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#topic_table_wrapper .col-md-6:eq(0)');
        });
        function enablePostsTable() {
            $("#post_table").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#post_table_wrapper .col-md-6:eq(0)');
            document.getElementById("post_table").scrollIntoView();
        }
        function getTopic(id) {
            event.preventDefault();
            $.ajax({
                cache: false,
                type: "GET",
                url: "@Url.Action("TopicAdmin", "Forum")",
                data: { "id": id },
                success: function (data) {
                    $("#posts").html(data);
                    $("#topic-title").html("Posts: " + $("#topic-tr-" + id + " td:first-child").text());
                    enablePostsTable();
                },
                error: function () {
                    alert("ajax error");
                }
            });
        }
        function deleteTopic(id) {
            event.preventDefault();
            $.ajax({
                type: "GET",
                url: "@Url.Action("DeleteTopicAdmin", "Forum")",
                data: { "id": id },
                success: function (data) {
                    if (data == "SUCCESS") {
                        $("#topic_table").DataTable().row($("#topic-tr-" + id)).remove().draw();
                        toastr.success("Topic deleted.");
                        if (parseInt($("#post_table").attr("topicId")) == id) {
                            $("#posts").html("");
                        }
                    }
                },
                error: function () {
                    alert("ajax error");
                }
            });
        }
        function deletePost(id) {
            event.preventDefault();
            $.ajax({
                type: "GET",
                url: "@Url.Action("DeletePostAdmin", "Forum")",
                data: { "id": id },
                success: function (data) {
                    if (data == "SUCCESS") {
                        $("#post_table").DataTable().row($("#post-tr-" + id)).remove().draw();
                        toastr.success("Post deleted.");
                    }
                },
                error: function () {
                    alert("ajax error");
                }
            });
        }
    </script>
}